# ChyperAI Platform Environment Variables
# Copy this file to .env and fill in the values

# ==========================================
# General Configuration
# ==========================================
NODE_ENV=development
PORT=3001

# ==========================================
# Database Configuration
# ==========================================

# Database Provider (supabase, neon, planetscale)
DATABASE_PROVIDER=supabase

# Supabase Configuration
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key
VITE_SUPABASE_FUNCTIONS_URL=https://your-project.supabase.co/functions/v1

# Neon PostgreSQL Configuration
VITE_NEON_DATABASE_URL=postgres://user:password@host/database

# PlanetScale Configuration
VITE_PLANETSCALE_HOST=aws.connect.psdb.cloud
VITE_PLANETSCALE_USERNAME=username
VITE_PLANETSCALE_PASSWORD=password
VITE_PLANETSCALE_DATABASE=database

# ==========================================
# Deployment Configuration
# ==========================================

# Default Deployment Provider (netlify, vercel, cloudflare)
VITE_DEFAULT_DEPLOYMENT_PROVIDER=netlify

# Domain for deployments (used by Cloudflare and custom domains)
VITE_DEPLOYMENT_DOMAIN=chyper-workers.dev
VITE_DEPLOYMENT_PREFIX=

# Cloudflare Configuration
VITE_CLOUDFLARE_API_TOKEN=your-cloudflare-api-token
VITE_CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id

# Netlify Configuration
VITE_NETLIFY_AUTH_TOKEN=your-netlify-auth-token
VITE_NETLIFY_SITE_ID=your-netlify-site-id

# Vercel Configuration
VITE_VERCEL_AUTH_TOKEN=your-vercel-auth-token
VITE_VERCEL_TEAM_ID=your-vercel-team-id

# ==========================================
# API & Backend Configuration
# ==========================================

# API URL for production
VITE_API_URL=https://api.example.com

# Backend URL for local development
VITE_BACKEND_URL=http://localhost:3001

# Proxy timeout for development (milliseconds)
VITE_PROXY_TIMEOUT=60000

# API Version
VITE_API_VERSION=v1

# ==========================================
# AI Configuration
# ==========================================

# AI Provider (openai, anthropic, google)
VITE_AI_PROVIDER=openai

# Default AI Model
VITE_DEFAULT_AI_MODEL=gpt-3.5-turbo

# OpenAI
VITE_OPENAI_API_KEY=your-openai-api-key

# Anthropic
VITE_ANTHROPIC_API_KEY=your-anthropic-api-key

# Google AI (Vertex AI/Gemini)
VITE_GOOGLE_AI_API_KEY=your-google-ai-api-key

# ==========================================
# GitHub Configuration
# ==========================================
VITE_GITHUB_ACCESS_TOKEN=your-github-access-token

# ==========================================
# Development Features & Flags
# ==========================================
VITE_ENABLE_VOICE_RECORDING=true
VITE_ENABLE_FILE_UPLOADS=true
VITE_ENABLE_DEPLOYMENT=true
VITE_ENABLE_GITHUB_INTEGRATION=true

# ==========================================
# Logging Configuration
# ==========================================
VITE_LOG_LEVEL=info  # debug, info, warn, error
VITE_CONSOLE_LOGGING=true
VITE_DEBUG=false
VITE_DEBUG_AUTH=false

# ==========================================
# Mock User (Development Only)
# ==========================================
# WARNING: Only enable for development!
ALLOW_MOCK_USER=false
MOCK_USER_ID=dev-user-123
MOCK_USER_EMAIL=dev@example.com
MOCK_USER_ROLE=user
MOCK_USER_TIER=free