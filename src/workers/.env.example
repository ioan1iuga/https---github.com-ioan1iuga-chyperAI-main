# Cloudflare Workers Environment Variables
# Copy this file to .env in your workers directory and fill in your values

# Environment
ENVIRONMENT=development
NODE_ENV=development

# URLs & Endpoints
API_BASE_URL=http://localhost:3001
FRONTEND_URL=http://localhost:5173
PUBLIC_URL=http://localhost:5173

# Application Info
APP_NAME=ChyperAI Platform
APP_TITLE=ChyperAI - AI-Powered Development Platform
APP_DESCRIPTION=AI-powered development environment with intelligent code assistance
API_VERSION=1.0.0
API_PATH=/api

# Authentication
JWT_SECRET=your-jwt-secret
AUTH_DOMAIN=your-auth-domain

# KV Namespaces (Configure in Cloudflare Dashboard or wrangler.toml)
# CACHE_NAMESPACE_ID=
# SESSIONS_NAMESPACE_ID=
# USER_DATA_NAMESPACE_ID=

# Durable Objects
# Configure in Cloudflare Dashboard or wrangler.toml

# D1 Database
# D1_DATABASE_ID=

# R2 Storage
# R2_BUCKET=

# AI Model Configuration
OPENAI_PROVIDER_ID=openai
ANTHROPIC_PROVIDER_ID=anthropic
GOOGLE_PROVIDER_ID=google

# CORS Settings
CORS_ALLOW_ORIGIN=*
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=authorization,x-client-info,apikey,content-type
CORS_MAX_AGE=86400
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW=60
RATE_LIMIT_MAX_REQUESTS=60
RATE_LIMIT_KEY_PREFIX=ratelimit:

# Terminal Configuration
TERMINAL_COMMAND_TIMEOUT=30000
TERMINAL_MAX_OUTPUT_SIZE=100000

# Deployment Configuration
DEPLOYMENT_DOMAIN=pages.dev

# WebSocket Configuration
WEBSOCKET_UPGRADE_STATUS=101
WEBSOCKET_PING_INTERVAL=30000

# Monitoring & Analytics
SENTRY_DSN=
ENABLE_ANALYTICS=false
LOG_LEVEL=info